{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build for debugging",
      "type": "shell",
      "command": "g++",
      "args": ["-g", "debug.cpp"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clang++ build active file",
      "type": "shell",
      "command": "clang++",
      "args": ["${fileBasename}", "-o", "${fileBasenameNoExtension}.out", "-g"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
